{
  "contract_name": "gmp-sample",
  "contract_version": "0.1.0",
  "idl_version": "1.0.0",
  "instantiate": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "InstantiateMsg",
    "type": "object",
    "additionalProperties": false
  },
  "execute": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ExecuteMsg",
    "oneOf": [
      {
        "type": "object",
        "required": [
          "send_message_evm"
        ],
        "properties": {
          "send_message_evm": {
            "type": "object",
            "required": [
              "destination_address",
              "destination_chain",
              "message",
              "msg_type"
            ],
            "properties": {
              "destination_address": {
                "type": "string"
              },
              "destination_chain": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "msg_type": {
                "$ref": "#/definitions/MessageType"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "type": "object",
        "required": [
          "send_message_cosmos"
        ],
        "properties": {
          "send_message_cosmos": {
            "type": "object",
            "required": [
              "destination_address",
              "destination_chain",
              "message",
              "msg_type"
            ],
            "properties": {
              "destination_address": {
                "type": "string"
              },
              "destination_chain": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "msg_type": {
                "$ref": "#/definitions/MessageType"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "type": "object",
        "required": [
          "receive_message_cosmos"
        ],
        "properties": {
          "receive_message_cosmos": {
            "type": "object",
            "required": [
              "message",
              "sender"
            ],
            "properties": {
              "message": {
                "type": "string"
              },
              "sender": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "type": "object",
        "required": [
          "receive_message_evm"
        ],
        "properties": {
          "receive_message_evm": {
            "type": "object",
            "required": [
              "payload",
              "source_address",
              "source_chain"
            ],
            "properties": {
              "payload": {
                "$ref": "#/definitions/Binary"
              },
              "source_address": {
                "type": "string"
              },
              "source_chain": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    ],
    "definitions": {
      "Binary": {
        "description": "Binary is a wrapper around Vec<u8> to add base64 de/serialization with serde. It also adds some helper methods to help encode inline.\n\nThis is only needed as serde-json-{core,wasm} has a horrible encoding for Vec<u8>. See also <https://github.com/CosmWasm/cosmwasm/blob/main/docs/MESSAGE_TYPES.md>.",
        "type": "string"
      },
      "MessageType": {
        "type": "string",
        "enum": [
          "message",
          "message_with_token",
          "token"
        ]
      }
    }
  },
  "query": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "QueryMsg",
    "oneOf": [
      {
        "type": "object",
        "required": [
          "get_stored_message"
        ],
        "properties": {
          "get_stored_message": {
            "type": "object",
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "type": "object",
        "required": [
          "get_ibc_response"
        ],
        "properties": {
          "get_ibc_response": {
            "type": "object",
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    ]
  },
  "migrate": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MigrateMsg",
    "type": "object",
    "additionalProperties": false
  },
  "sudo": null,
  "responses": {
    "get_i_b_c_response": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "IBCResponse",
      "type": "object",
      "required": [
        "ack",
        "channel",
        "registry",
        "sequence",
        "success"
      ],
      "properties": {
        "ack": {
          "type": "string"
        },
        "channel": {
          "type": "string"
        },
        "registry": {
          "type": "string"
        },
        "sequence": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "success": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "get_stored_message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "GetStoredMessageResp",
      "type": "object",
      "required": [
        "message",
        "sender"
      ],
      "properties": {
        "message": {
          "type": "string"
        },
        "sender": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
